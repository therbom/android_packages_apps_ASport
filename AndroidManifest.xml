<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.therbom.asport"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.therbom.asport.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.therbom.asport.MainUser1Activity"
            android:label="@string/title_activity_main_user1" >
        </activity>
        <activity
            android:name="com.therbom.asport.MainUser2Activity"
            android:label="@string/title_activity_main_user2" >
        </activity>
        <activity
            android:name="com.therbom.asport.TrainingUser1Activity"
            android:label="@string/title_activity_training_user1"
            android:parentActivityName="com.therbom.asport.MainUser1Activity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.therbom.asport.MainUser1Activity" />
        </activity>
        <activity
            android:name="com.therbom.asport.User1TrainingKrachtActivity"
            android:label="@string/title_activity_user1_training_kracht" >
        </activity>
        <activity
            android:name="com.therbom.asport.User1TrainingSchietActivity"
            android:label="@string/title_activity_user1_training_schiet" >
        </activity>
        <activity
            android:name="com.therbom.asport.User1TrainingConditieActivity"
            android:label="@string/title_activity_user1_training_conditie" >
        </activity>
    </application>

</manifest>
